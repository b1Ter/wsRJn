<Page x:Class="WorldYachts.Pages.ForumWindowPages.ThemesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldYachts.Pages.ForumWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThemesPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            
            <TextBlock x:Name="subcategoryName"
                       Style="{StaticResource txtHeader}"/>
            
            <Line Fill="Black" StrokeThickness="14" 
                  Stroke="Black" X2="{Binding rightFrame.Width}"/>
            
            <StackPanel x:Name="panelThemes" Orientation="Vertical"
                        VerticalAlignment="Top" HorizontalAlignment="Left"/>
            
        </StackPanel>
    </Grid>
</Page>
