<Window x:Class="WorldYachts.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldYachts"
        mc:Ignorable="d"
        Title="Администрирование" 
        Height="{Binding ElementName=thisFrame, Path=Content.DesignHeight}"
        Width="{Binding ElementName=thisFrame, Path=Content.DesignWidth}"
        MinHeight="{Binding ElementName=thisFrame, Path=Content.MinHeight}" 
        MinWidth="{Binding ElementName=thisFrame, Path=Content.MinWidth}"
        WindowStartupLocation="CenterScreen"
        FontFamily="Arial">
    <Grid>
        <Frame x:Name="thisFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
